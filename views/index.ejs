<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/styles.css">
    </head>
<body>
        <h1><%= title %></h1>
        <form action="/", method="GET">
            <label for="pool">Search Pool</label>
            <select name="pool" id="pool">
                <%- include('./partials/options', {table: pools}) %>
            </select>
            <button type="submit">Submit</button>
        </form>
        <p>Pools</p>
        <ul>
            <% pools.forEach((item) => { %>
                <li><%= item.name %></li>
            <% }) %>
        </ul>
        <p>Items in selected pool</p>
        <ul>
            <% items.forEach((item) => { %>
                <li><%= item.name %></li>
            <% }) %>
        </ul>
        <ul>
        <li><a href="/create">Create</a></li>
        <li><a href="/delete">Delete</a></li>
        <li><a href="/update">Update</a></li>
        </ul>
</body>
</html>
